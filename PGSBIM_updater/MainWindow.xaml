<Window x:Class="PGSBIM_updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGSBIM_updater"
        mc:Ignorable="d"
        Title="PGS-BIM уведомление об обновлениях" Height="200" Width="350" Loaded="Load">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="254*"/>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="450*"/>
            <ColumnDefinition Width="65*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="63,0,37,0" TextWrapping="Wrap" 
                   VerticalAlignment="Center" Grid.ColumnSpan="3" Height="125">
            <Run Text="Можете закрыть это окно, модуль уведомлений будет работать в фоновом режиме. 
                 Чтобы закрыть его, воспользуйтесь"/>
            <Run Text=" диспетчером задач ("/><Run Text="Ctrl+Shift+Esc)"/>
            <Run Language="ru-ru" Text=". Имя процесса "/><Run Text="PGSBIM_updater"/></TextBlock>
    </Grid>
</Window>
